<!-- Views/Employee/Index.cshtml -->

@model List<Employee>

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Designation</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Designation</td>
                <td>@employee.Department</td>
            </tr>
        }
    </tbody>
</table>
